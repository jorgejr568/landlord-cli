# Database (MariaDB)
LANDLORD_DB_URL=mysql://landlord:landlord@localhost:3306/landlord

# MariaDB container settings
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=landlord
MYSQL_USER=landlord
MYSQL_PASSWORD=landlord
MYSQL_PORT=3306

# Storage
LANDLORD_STORAGE_BACKEND=local
LANDLORD_STORAGE_LOCAL_PATH=./invoices

# S3 storage (set LANDLORD_STORAGE_BACKEND=s3 to enable)
LANDLORD_S3_BUCKET=
LANDLORD_S3_REGION=
LANDLORD_S3_ACCESS_KEY_ID=
LANDLORD_S3_SECRET_ACCESS_KEY=
LANDLORD_S3_ENDPOINT_URL=
LANDLORD_S3_PRESIGNED_EXPIRY=604800

# PIX QR Code defaults (can be overridden per billing)
LANDLORD_PIX_KEY=
LANDLORD_PIX_MERCHANT_NAME=
LANDLORD_PIX_MERCHANT_CITY=

# Logging
LANDLORD_LOG_LEVEL=INFO
LANDLORD_LOG_JSON=false
